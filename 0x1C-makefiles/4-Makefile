# Makefile for building the "school" executable with pattern rules

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

all: $(NAME)

clean:
	$(RM) *~

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME) $(OBJ)

re: oclean all

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)
